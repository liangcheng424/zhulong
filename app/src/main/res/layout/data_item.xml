<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="@dimen/dp_6"
    android:layout_margin="@dimen/dp_6"
    android:padding="@dimen/dp_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/data_img"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_title"
            android:lines="1"
            android:layout_toRightOf="@id/data_img"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_people_count"
            android:id="@+id/person_count"
            android:layout_toRightOf="@id/data_img"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@id/data_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_people_count"
            android:layout_below="@id/data_title"
            android:layout_toRightOf="@id/person_count"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_count"
            android:layout_toRightOf="@id/data_img"
            android:textSize="@dimen/dp_10"
            android:id="@+id/introduce"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+关注"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_45"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>