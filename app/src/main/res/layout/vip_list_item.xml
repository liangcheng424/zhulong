<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/dp_165"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/vip_img"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="@dimen/dp_165"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vip_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/vip_title"
        android:text="456"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vip_student_number"
        android:layout_below="@id/vip_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_people_count"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vip_student_number"
        android:drawableLeft="@drawable/ic_like"
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/dp_10"
        />
</androidx.constraintlayout.widget.ConstraintLayout>